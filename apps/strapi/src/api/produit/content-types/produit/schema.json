{
  "kind": "collectionType",
  "collectionName": "produits",
  "info": {
    "singularName": "produit",
    "pluralName": "produits",
    "displayName": "Produit",
    "description": "Gestion des produits de la boulangerie"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "nom": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "prix": {
      "type": "decimal",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "disponible": {
      "type": "boolean",
      "default": true
    },
    "stock": {
      "type": "integer",
      "default": 0
    },
    "stockMinimum": {
      "type": "integer",
      "default": 5
    },
    "enRupture": {
      "type": "boolean",
      "default": false
    },
    "allergenes": {
      "type": "json",
      "default": []
    },
    "informationsNutritionnelles": {
      "type": "json",
      "default": {
        "calories": null,
        "proteines": null,
        "glucides": null,
        "lipides": null,
        "fibres": null,
        "sel": null
      }
    },
    "regimesCompatibles": {
      "type": "json",
      "default": []
    },
    "tempsPreparation": {
      "type": "integer",
      "default": 30,
      "description": "Temps de pr√©paration en minutes"
    },
    "poids": {
      "type": "decimal"
    },
    "unite": {
      "type": "enumeration",
      "enum": ["piece", "gramme", "kilogramme", "litre"],
      "default": "piece"
    },
    "disponibiliteJours": {
      "type": "json",
      "default": {
        "lundi": true,
        "mardi": true,
        "mercredi": true,
        "jeudi": true,
        "vendredi": true,
        "samedi": true,
        "dimanche": false
      }
    },
    "produitSaisonnier": {
      "type": "boolean",
      "default": false
    },
    "dateDebutSaison": {
      "type": "date"
    },
    "dateFinSaison": {
      "type": "date"
    },
    "ordre": {
      "type": "integer",
      "default": 0
    },
    "nouveaute": {
      "type": "boolean",
      "default": false
    },
    "promotion": {
      "type": "json",
      "default": {
        "active": false,
        "pourcentage": 0,
        "dateDebut": null,
        "dateFin": null
      }
    },
    "categorie": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categorie.categorie",
      "inversedBy": "produits"
    }
  }
}
